<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/user"/>

                        <TextView
                            android:id="@+id/user_firstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_firstName"
                            android:textSize="25sp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/user_image"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:id="@+id/user_lastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/user_firstName"
                            android:text="@string/user_lastName"
                            android:textColor="@color/textColor"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/user_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_city"
                            android:textColor="@color/textColor"
                            android:textSize="15dp"
                            android:layout_toRightOf="@+id/user_image"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="60dp"
                            />

                        <TextView
                            android:id="@+id/user_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="60dp"
                            android:layout_toRightOf="@+id/user_city"
                            android:text="@string/user_country"
                            android:textColor="@color/textColor"
                            android:textSize="15dp"
                            />
                    </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:id="@+id/txt_user_rides"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:gravity="center"
                                android:text="@string/user_rides"
                                android:textColor="@color/textColor"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/user_rides"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:text="@string/default_value"
                                android:gravity="center"
                                android:textColor="@color/textColor"
                                android:layout_marginTop="25dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/txt_free_rides"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="150dp"
                                android:layout_marginTop="0dp"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:gravity="center"
                                android:text="@string/user_free_rides"
                                android:textColor="@color/textColor"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/free_rides"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="150dp"
                                android:layout_marginTop="25dp"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/default_value"
                                android:textColor="@color/textColor"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/txt_credits"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="300dp"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:gravity="center"
                                android:text="@string/user_credits"
                                android:textColor="@color/textColor"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/credits"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="300dp"
                                android:layout_marginTop="25dp"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="@string/default_value"
                                android:textColor="@color/textColor"
                                android:textSize="25sp" />
                        </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/past_trips"
                    android:textColor="@color/textColor"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    />
                <TextView
                    android:id="@+id/see_all_trips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all_trips"
                    android:textColor="@color/textColor"
                    android:gravity="end"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>